# NGINX - Ruleta (Hostinger VPS, Ubuntu)
# Copiar a /etc/nginx/sites-available/ruleta.dataguaviare.com.co
# Enlazar: ln -s /etc/nginx/sites-available/ruleta.dataguaviare.com.co /etc/nginx/sites-enabled/
# Certbot: certbot --nginx -d ruleta.dataguaviare.com.co

# Puerto del contenedor Docker (debe coincidir con PORT en .env)
upstream ruleta_app {
    server 127.0.0.1:8080;
}

server {
    listen 80;
    server_name ruleta.dataguaviare.com.co;
    # Certbot añadirá bloque listen 443 ssl al obtener certificado

    location / {
        proxy_pass http://ruleta_app;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
