DirectoryIndex index.php

# Favicon: redirigir favicon.ico a favicon.svg (evita 404)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteRule ^favicon\.ico$ favicon.svg [L]
</IfModule>

# Redirección HTTPS en producción (solo si la petición original era HTTP)
# Usa X-Forwarded-Proto para evitar bucle cuando hay proxy (NGINX) delante
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{ENV:APP_ENV} production
  RewriteCond %{HTTP:X-Forwarded-Proto} !^https
  RewriteCond %{HTTPS} off
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Cabeceras de seguridad
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
