DirectoryIndex index.php

# Favicon: redirigir favicon.ico a favicon.svg (evita 404)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteRule ^favicon\.ico$ favicon.svg [L]
</IfModule>

# Detectar HTTPS cuando NGINX/proxy pasa X-Forwarded-Proto (evita bucle de redirecci贸n)
SetEnvIf X-Forwarded-Proto "https" HTTPS=on

# Redirecci贸n HTTPS en producci贸n (solo si la petici贸n original era HTTP)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{HTTPS} off
  RewriteCond %{ENV:APP_ENV} production
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Cabeceras de seguridad
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
